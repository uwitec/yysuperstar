<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:text="所在区域： "
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/sp_zone"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tv_area"
        android:layout_below="@+id/tv_area"
        android:background="#00000000"
        android:entries="@array/shanghaizone" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp_zone"
        android:layout_below="@+id/sp_zone"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="地址详情： "
        android:textColor="#000000" />

    <EditText
        android:id="@+id/et_daddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_address"
        android:layout_below="@+id/tv_address"
        android:ems="10"
        android:inputType="textMultiLine" />

</RelativeLayout>