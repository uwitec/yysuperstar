<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rlistback"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="90dp"
        android:text="联系电话： "
        android:textColor="@android:color/black"
        android:textSize="12dp" />

    <ListView
        android:id="@+id/lv_addresses"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:cacheColorHint="#00000000"
        android:layout_below="@+id/btn_newAddress"
        android:layout_marginLeft="3dp" >

    </ListView>

    <Button
        android:id="@+id/btn_newAddress"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_adress"
        android:background="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/tv_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_phone"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/tv_selectphone"
        android:text="联系地址： "
        android:textColor="@android:color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_selectphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_phone"
        android:textStyle="bold" 
        android:layout_toRightOf="@+id/tv_phone"
        android:text="phonenumber"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_selectadress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_adress"
        android:layout_toRightOf="@+id/tv_adress"
        android:text="adress"
        android:textStyle="bold" 
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bu_toorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="确认" />

    <ListView
        android:id="@+id/lv_phone"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_selectphone"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="12dp" >
    </ListView>

    <Button
        android:id="@+id/btn_newPhone"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignBaseline="@+id/tv_selectphone"
        android:layout_alignBottom="@+id/tv_selectphone"
        android:layout_alignParentRight="true"
        android:background="@android:drawable/ic_input_add" />

    <EditText
        android:id="@+id/et_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@+id/tv_receiver"
        android:ems="10"
        android:hint="联系人" />

    <TextView
        android:id="@+id/tv_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_receiver"
        android:layout_alignBottom="@+id/et_receiver"
        android:layout_alignLeft="@+id/tv_phone"
        android:text="收件人"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

</RelativeLayout>