<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shoppingcarb"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/orderlist"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:divider="#00000000"
        android:cacheColorHint="#00000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="105dp" >
    </ListView>

    <TextView
        android:id="@+id/tv_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderlist"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="小计/Subtotal:"
        android:textColor="#7a9c33"
        android:textSize="25sp" />
    
    <TextView
        android:id="@+id/tv_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_subtotal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="外送费/Delivery:" 
        android:textColor="#7a9c33"
        android:textSize="25sp" />
    
    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_delivery"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="合计/Total:" 
        android:textColor="#7a9c33"
        android:textSize="25sp" />
    
    <TextView
        android:id="@+id/tv_subtotal_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_subtotal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:hint="0.0"
        android:textColor="#ff0000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_delivery_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_delivery"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:hint="0.0"
        android:textColor="#ff0000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_total_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_total"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:hint="0.0"
        android:textColor="#ff0000"
        android:textSize="22dp" />

	<Button
	    android:id="@+id/ib_clear"
	    android:layout_width="wrap_content"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/redbutton_selector"
	    android:textColor="#ffffff"
	    android:textSize="20dp"
	    android:text="刷 新 购 物 车" />

</RelativeLayout>