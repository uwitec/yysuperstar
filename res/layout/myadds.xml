<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="联系电话:  "
        android:textSize="20dp" />

    <ListView
        android:id="@+id/lv_phone"
        android:layout_width="match_parent"
        android:dividerHeight="12dp"
        android:layout_height="100dp"
        android:divider="#00000000"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_newPhone" >
    </ListView>

    <TextView
        android:id="@+id/tv_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lv_phone"
        android:layout_marginTop="82dp"
        android:text="联系地址:  "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_selectphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_phone"
        android:layout_toRightOf="@+id/tv_phone"
        android:text="15921203291" />

    <ListView
        android:id="@+id/lv_addresses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_newAddress" >
    </ListView>

    <TextView
        android:id="@+id/tv_selectadress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_adress"
        android:layout_alignLeft="@+id/tv_selectphone"
        android:text="宝杨路2021弄6号501" />

    <Button
        android:id="@+id/btn_newPhone"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/addphones" />

    <Button
        android:id="@+id/btn_newAddress"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_adress"
        android:background="@drawable/addphones" />
    
</RelativeLayout>