<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/order_back" >

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="订单预览"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="3dp"
        android:text="商品详情："
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="3dp"
        android:text="需付款："
        android:textColor="#000000"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lv_order"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="3dp"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:divider="#00000000" >

    </ListView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lv_order"
        android:layout_marginLeft="3dp"
        android:text="收货信息"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="3dp"
        android:text="联系电话："
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_orderphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="3dp"
        android:text="PhoneNumber"
        android:textColor="#ff0000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_orderphone"
        android:layout_marginLeft="3dp"
        android:text="收货人："
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_ordername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="3dp"
        android:text="Name"
        android:textColor="#ff0000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_ordername"
        android:layout_marginLeft="3dp"
        android:text="收货地址："
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_orderaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="3dp"
        android:text="Address"
        android:textColor="#ff0000"
        android:textSize="22dp" />

    <Button
        android:id="@+id/bu_ordersure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="确认订单" />

    <TextView
        android:id="@+id/tv_ordermoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_toRightOf="@+id/textView4"
        android:text="0"
        android:textColor="#ff0000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_ordermoney"
        android:layout_toRightOf="@+id/textView2"
        android:text="￥"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_orderaddress"
        android:layout_marginLeft="3dp"
        android:text="备注信息："
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="3dp"
        android:text="无"
        android:textColor="#ff0000"
        android:textSize="22dp" />

</RelativeLayout>